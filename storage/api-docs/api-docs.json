                                                    "name": {
                                                        "type": "string",
                                                        "example": "João"
                                                    },
                                                    "created_at": {
                                                        "type": "string",
                                                        "example": "2025-08-29 00:00:00"
                                                    },
                                                    "updated_at": {
                                                        "type": "string",
                                                        "example": "2025-08-29 00:00:00"
                                                    }
                                                },
                                                "type": "object"
